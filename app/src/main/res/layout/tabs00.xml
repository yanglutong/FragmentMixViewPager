<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_tab"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y30"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@mipmap/jianbian">

        <LinearLayout
            android:id="@+id/liner_jz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/dimens_20dp"
                android:layout_height="@dimen/dimens_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/back"
                 />

            <TextView
                android:layout_weight="1"
                android:id="@+id/titles"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y35"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@mipmap/shezhixin"
                android:padding="5dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_wendu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/wendu"
            android:padding="5dp"

            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_wendu"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp" />



        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_fengshan"
            android:background="@mipmap/wifi_false"
            android:padding="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_fengshan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_menu"
            android:background="@mipmap/fengshan"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/iv_menu"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back"
            android:padding="5dp"
            android:visibility="gone" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_menu"
            android:background="@mipmap/jiahaobai2"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/iv_fenxi"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jiahaobai"
            android:padding="5dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>