<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/jig_bg_shape"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x5"
    android:layout_marginLeft="@dimen/x5"
    android:layout_marginRight="@dimen/x5"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/device_shape"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25">
            <TextView
                android:id="@+id/title_num"
                android:layout_weight="1"
                android:text="基站1"
                android:layout_marginLeft="@dimen/x8"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/x8"
                android:text="来源: 公开数据"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25">
            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:text="运营商:"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径"
                android:textColor="#427FFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
<!--            <TextView-->
<!--                android:text="覆盖半径 (m):"-->
<!--                android:layout_marginLeft="@dimen/x15"-->
<!--                android:textColor="@android:color/black"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content">-->
<!--            </TextView>-->
<!--            <TextView-->
<!--                android:layout_marginLeft="@dimen/x6"-->
<!--                android:text="覆盖半径"-->
<!--                android:textColor="#427FFE"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content">-->
<!--            </TextView>-->
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25">
            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:text="TAC/LAC/NID:"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_lac"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径"
                android:textColor="#427FFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="ECI/CI/BID:"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_cid"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径"
                android:textColor="#427FFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout> <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25">
            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:text="位置(BD):"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        <TextView
                android:text="纬度"
                android:textColor="#1C1C1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_lat_lon"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径"
                android:textColor="#427FFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="   经度:"
            android:textColor="#1C1C1C"></TextView>
            <TextView
                android:id="@+id/tv_lat_lon2"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径"
                android:textColor="#427FFE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:text="地址:"
                android:textColor="@color/color_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tv_address"
                android:layout_marginLeft="@dimen/x6"
                android:text="覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径覆盖半径"
                android:textColor="#1C1C1C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x3"
        android:layout_marginRight="@dimen/x3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />
    <LinearLayout
        android:layout_marginTop="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_openMap"
            android:layout_width="40dp"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="clip_horizontal"
            android:background="@mipmap/daohang"
            android:text="导航"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/bt_quanjing"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="clip_horizontal"
            android:background="@mipmap/jiankong"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <Button
            android:id="@+id/bt_m_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="clip_horizontal"
            android:background="@mipmap/baojinglan1"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />


        <Button
            android:layout_marginLeft="@dimen/x5"
            android:id="@+id/bt_taset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="clip_horizontal"
            android:background="@mipmap/ta"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_show"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/navgation"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_m_dele"
            android:layout_marginLeft="@dimen/x5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="clip_horizontal"
            android:background="@mipmap/delete"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>