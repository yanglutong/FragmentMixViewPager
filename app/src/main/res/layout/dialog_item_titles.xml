<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/liner_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_blue"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/liner_option_zhiShi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_option_zhiShi"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="基站报警"
                    android:textColor="@android:color/white"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TAC:  "
                android:textColor="@color/black"></TextView>

            <EditText
                android:id="@+id/et_tac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CID:   "
                android:textColor="@color/black"></TextView>

            <EditText
                android:id="@+id/et_Cid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"></EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>


        <LinearLayout
            android:id="@+id/liner_jzBj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <View
                android:id="@+id/view_jzBj"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"></View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_bao_j"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/gray3"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_bg_round"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_Ok"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/jianbian"
                android:text="添加"
                android:textColor="@color/white"></Button>

            <!--        <Button-->
            <!--            android:layout_marginRight="10dp"-->
            <!--            android:layout_gravity="right"-->
            <!--            android:id="@+id/bt_Cancel"-->
            <!--            android:layout_width="100dp"-->
            <!--            android:layout_height="40dp"-->
            <!--            android:background="@drawable/button_bgs"-->
            <!--            android:layout_alignParentRight="true"-->
            <!--            android:text="取消"-->
            <!--            android:textColor="@color/black"></Button>-->


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:orientation="horizontal"></RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_blue_right"
            android:text="确定"
            android:textColor="@color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/bg_black" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_blue_left"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>