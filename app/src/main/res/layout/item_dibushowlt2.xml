<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <CheckBox
            android:layout_weight="1"
            android:id="@+id/rb_yidong"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="移动"
            android:textSize="12dp" />

        <CheckBox
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/rb_liantong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联通"
            android:textSize="12dp" />
        <CheckBox
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/rb_ldainxin4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="电信"
            android:textSize="12dp" />
        <CheckBox
            android:layout_weight="1"
            android:id="@+id/rb_cdma"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电信CDMA"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />

    <LinearLayout
        android:id="@+id/ll_sid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="SID:"
            android:textColor="@color/gray_black" />

        <EditText
            android:id="@+id/et_sid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="CDMA请输入SID"
            android:inputType="number"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_nid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="请输入lac:"
            android:textColor="@color/gray_black" />

        <EditText
            android:id="@+id/et_nid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="请输入nid"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="请输入ci:"
            android:textColor="@color/gray_black" />

        <EditText
            android:id="@+id/et_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="请输入bid"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TAC/LAC/NID:"
            android:textColor="@color/gray_black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_taclac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="请输入TAC/LAC/NID"
            android:inputType="number"
            android:text="12562"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="ECI/CI/BID:"
            android:textColor="@color/gray_black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/et_eci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:hint="请输入ECI/BID"
            android:inputType="number"
            android:text="46026774"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="经度（WGS）:"
                android:textColor="@color/gray_black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/ets_lon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="请输入经度"
                android:inputType="numberDecimal"
                android:text=""
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="纬度（WGS）:"
                android:textColor="@color/gray_black"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/ets_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="请输入纬度"
                android:inputType="numberDecimal"
                android:text=""
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="基站范围:"
            android:textColor="@color/gray_black"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_weight="2"
            >

            <EditText
                android:id="@+id/et_ta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:hint="请输入范围值"
                android:inputType="number|numberDecimal"
                android:text=""
                android:textSize="12dp" />

            <Button
                android:visibility="gone"
                android:id="@+id/btadd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#2f8dff"
                android:text="添加TA值"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/bt_adddilao"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/shape_button_queren"
                    android:text="确认"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_7f000000" />

</LinearLayout>