<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <LinearLayout
        android:background="@mipmap/jianbian"
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/liner_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/tabs"/>

        <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_jz_fragment2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip">

                <com.lutong.widget.MyFragmentTabHost
                    android:id="@+id/tabhost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#D6D6D6" />
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/liner_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".ui.HomeActivity">


        <RelativeLayout
            android:id="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/banner"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="-16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@color/white"
                    android:textSize="25sp"></TextView>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/navi_dimens_250dp"
            android:background="@drawable/shape_re_yuanjiao"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/x30"
                android:text="功能模块"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_100dp"
                android:layout_marginLeft="@dimen/navi_dimens_10dp"
                android:layout_marginTop="@dimen/navi_dimens_15dp"
                android:layout_marginRight="@dimen/navi_dimens_10dp"
                android:background="@drawable/bg_blue"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/navi_dimens_45dp"
                    android:layout_height="@dimen/navi_dimens_45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/navi_dimens_30dp"
                    android:src="@drawable/jizhan"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimens_20dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基站查询"
                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="导航、基站环境勘察"
                        android:textColor="#9A9899"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/liner_jz_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/navi_dimens_30dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="使 用"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_100dp"
                android:layout_marginLeft="@dimen/navi_dimens_10dp"
                android:layout_marginRight="@dimen/navi_dimens_10dp"
                android:background="@drawable/bg_green"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/navi_dimens_45dp"
                    android:layout_height="@dimen/navi_dimens_45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/navi_dimens_30dp"
                    android:src="@drawable/gongmo"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimens_20dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工模"
                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="基站全信息采集"
                        android:textColor="#9A9899"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/liner_gm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/navi_dimens_30dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="使 用"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_100dp"
                android:layout_marginLeft="@dimen/navi_dimens_10dp"
                android:layout_marginRight="@dimen/navi_dimens_10dp"
                android:background="@drawable/bg_yellow"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/navi_dimens_45dp"
                    android:layout_height="@dimen/navi_dimens_45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/navi_dimens_30dp"
                    android:src="@drawable/dingwei"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimens_20dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定位"
                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="支持多目标定位"
                        android:textColor="#9A9899"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>

                <TextView
                    android:id="@+id/liner_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/navi_dimens_30dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:text="使 用"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/liner_jz_home"
                android:orientation="vertical"
                android:background="@drawable/blue_bg1"
                android:layout_width="130dp"
                android:layout_height="130dp">
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/jizhan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:text="基站查询"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_gm"
                android:orientation="vertical"
                android:background="@drawable/blue_bg2"
                android:layout_width="130dp"
                android:layout_height="130dp">
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gongmo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:text="工模"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_dw"
                android:orientation="vertical"
                android:background="@drawable/blue_bg3"
                android:layout_width="130dp"
                android:layout_height="130dp">
                <ImageView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dingwei"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:text="定位"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
